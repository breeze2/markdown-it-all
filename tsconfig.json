{
    "compilerOptions": {
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "**/tests/*"
    ],
    "include": [
        "src"
    ],
}